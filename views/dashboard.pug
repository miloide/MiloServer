extends layout.pug
block headers
	link(rel="stylesheet", href="/css/dashboard.css")
block navigation
	ul.nav.navbar-nav.navbar-right
		li.btn-group
			li.dropdown
				a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
					i.material-icons account_circle
					span.caret
				ul.dropdown-menu
					if user
						li
							span &nbsp; Hi #{user.name}
							br
							span &nbsp; Account Type:  #{user.role}
						li
							a(href='/users/logout') Logout
					else
						li
							a(href='/users/login') Login
						li
							a(href='/users/register') Register
block content
	.container-fluid
		.row
			.col-sm-3.col-md-2.sidebar
				ul.nav.nav-sidebar
					li
						a(href='/editor/')
							i.material-icons add
							| &nbsp; New Project
				ul.nav.nav-sidebar(style="border-top: 1px solid #eee;")
					li
						a(href='')
							i.material-icons group
							| &nbsp; Shared with me
					li
						a(href='')
							i.material-icons delete
							| &nbsp; Trash
				ul.nav.nav-sidebar(style="border-top: 1px solid #eee;")
					li
						a(href='')
							i.material-icons feedback
							| &nbsp; Feedback
			.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
				h2.sub-header My Projects
				.tbl-header
					table.table.table-hover.table-striped.table-responsive(style="width:100%")
						thead
							tr.text-center
								th #
								th Project
								th.text-center Owner
								th Last Modified
								th Actions
					- var n = 0;
				.tbl-body
					table.table.table-responsive(style="width:100%")
						tbody
							while n < 10
								tr
									td= n++
									td
										a(href='/editor/' + n) Hello World
									td Me
									td March 23, 2018
									td
										.dropdown
											a(href='/editor/' + n)
												i.material-icons launch
											a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
												i.material-icons more_vert
											ul.dropdown-menu
												li
													a(href='#')
														i.material-icons create
														| &nbsp; Rename
												li
													a(href='#')
														i.material-icons person_add
														| &nbsp; Collaborators
												li
